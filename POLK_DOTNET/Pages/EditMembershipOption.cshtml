@page "/editmembershipoption/{id:int}"
@model POLK_DOTNET.Pages.EditMembershipOptionModel
@{
    ViewData["Title"] = "Edit Membership Option";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Edit Membership Option</h1>

    <form method="post" class="space-y-4 p-6 bg-white rounded-lg shadow-md">
        <input type="hidden" asp-for="MembershipOption.Id" />
        
        <div>
            <label asp-for="MembershipOption.Title" class="block text-sm font-medium text-gray-700">Title</label>
            <input type="text" asp-for="MembershipOption.Title" class="w-full px-4 py-2 border rounded-md" required />
        </div>
        
        <div>
            <label asp-for="MembershipOption.Price" class="block text-sm font-medium text-gray-700">Price</label>
            <input type="text" asp-for="MembershipOption.Price" class="w-full px-4 py-2 border rounded-md" required />
        </div>

        <div>
            <label asp-for="MembershipOption.Features" class="block text-sm font-medium text-gray-700">Features (one per line)</label>
            <textarea asp-for="MembershipOption.Features" rows="5" class="w-full px-4 py-2 border rounded-md" required></textarea>
        </div>

        <div>
            <label asp-for="MembershipOption.DisplayOrder" class="block text-sm font-medium text-gray-700">Display Order</label>
            <input type="number" asp-for="MembershipOption.DisplayOrder" class="w-full px-4 py-2 border rounded-md" required />
        </div>

        <button type="submit" class="px-4 py-2 text-white bg-red-700 rounded-md hover:bg-red-800">Save Changes</button>
        <a asp-page="/Admin" class="text-gray-600 hover:underline ml-4">Cancel</a>
    </form>
</div>
